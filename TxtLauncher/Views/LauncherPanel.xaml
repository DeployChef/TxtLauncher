<UserControl x:Class="TxtLauncher.Views.LauncherPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TxtLauncher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Margin="10" HorizontalAlignment="Left">
                <Label Content="Редактор"/>
                <ComboBox Width="150"/>
            </StackPanel>
            <Button Content="+"  Margin="10" Width="50" HorizontalAlignment="Right"/>
        </Grid>
        <local:FileList Grid.Row="1"></local:FileList>
    </Grid>
</UserControl>
